<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="kristofcolpaert.com.week4oefening1.ExplicitActivity">

    <TextView android:text="Hello Android!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAndroid" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/buttonOk"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/buttonCancel"
        android:layout_alignTop="@+id/buttonOk"
        android:layout_toRightOf="@+id/buttonOk"
        android:layout_toEndOf="@+id/buttonOk" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joepie"
        android:id="@+id/buttonJoepie"
        android:layout_alignTop="@+id/buttonCancel"
        android:layout_toRightOf="@+id/buttonCancel"
        android:layout_toEndOf="@+id/buttonCancel" />

</RelativeLayout>
