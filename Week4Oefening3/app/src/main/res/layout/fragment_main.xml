<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Webbrowser NMCT.BE"
        android:id="@+id/buttonBrowser"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Make Call"
        android:id="@+id/buttonCall"
        android:layout_below="@+id/buttonBrowser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Dial number"
        android:id="@+id/buttonDial"
        android:layout_below="@+id/buttonCall"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Geolocation"
        android:id="@+id/buttonGeo"
        android:layout_below="@+id/buttonDial"
        android:layout_alignLeft="@+id/buttonDial"
        android:layout_alignStart="@+id/buttonDial" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Contacts"
        android:id="@+id/buttonContacts"
        android:layout_below="@+id/buttonGeo"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Edit first contact"
        android:id="@+id/buttonEditFirst"
        android:layout_below="@+id/buttonContacts"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Calculate BMI"
        android:id="@+id/buttonBMI"
        android:layout_below="@+id/buttonEditFirst"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
