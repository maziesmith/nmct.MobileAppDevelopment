<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.50"
        android:id="@+id/leftRelativeLayout"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="YOUR INPUT"
            android:id="@+id/textViewInput"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="?android:attr/listSeparatorTextViewStyle"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextHeight"
            android:layout_below="@+id/textViewInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:inputType="numberDecimal"
            android:layout_marginTop="20dp"
            android:hint="Your height" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextMass"
            android:layout_below="@+id/editTextHeight"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:inputType="numberDecimal"
            android:hint="Your weight"
            android:layout_marginBottom="0dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="UPDATE"
            android:id="@+id/buttonUpdate"
            android:layout_below="@+id/editTextMass"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.50"
        android:id="@+id/rightRelativeLayout"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="YOUR BMI INFO"
            android:id="@+id/textViewBMI"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="?android:attr/listSeparatorTextViewStyle"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewBMI"
            android:layout_below="@+id/textViewBMI"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/silhouette_1" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Index:"
            android:id="@+id/textViewIndex"
            android:layout_below="@+id/textViewBMI"
            android:layout_toRightOf="@+id/imageViewBMI"
            android:layout_toEndOf="@+id/imageViewBMI"
            android:layout_marginLeft="10dp"
            android:gravity="right" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Fill in your BMI info"
            android:id="@+id/textViewIndex1"
            android:layout_below="@+id/textViewBMI"
            android:layout_toRightOf="@+id/textViewIndex"
            android:layout_toEndOf="@+id/textViewIndex"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Category:"
            android:id="@+id/textViewCategory"
            android:layout_below="@+id/textViewIndex"
            android:layout_toRightOf="@+id/imageViewBMI"
            android:layout_toEndOf="@+id/imageViewBMI"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill in your BMI info"
            android:id="@+id/textViewCategory1"
            android:layout_alignTop="@+id/textViewCategory"
            android:layout_toRightOf="@+id/textViewIndex"
            android:layout_toEndOf="@+id/textViewIndex"
            android:layout_marginLeft="20dp" />

    </RelativeLayout>
</LinearLayout>